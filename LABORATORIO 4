void uno(){

string matriz[3][4];
for(int i=0;i<3;i++){
        cout<<"ingrese el nombre de la persona "<<i+1<<" :";
        cin>>matriz[i][0];
        cout<<"ingrese el apellido de la persona "<<i+1<<" :";
        cin>>matriz[i][1];
        cout<<"ingrese la edad de la persona "<<i+1<<" :";
        cin>>matriz[i][2];
        cout<<"ingrese el dni de la persona "<<i+1<<" :";
        cin>>matriz[i][3];
}
cout<<"Datos completos de las 3 personas."<<endl;

for(int i=0;i<3;i++){
        cout<<"Persona "<<i+1<<" Nombre: "<<matriz[i][0]<<" Apellido:"<<matriz[i][1]<<" Edad: "<<matriz[i][2]<<" DNI: "<<matriz[i][3]<<endl;
}
}


