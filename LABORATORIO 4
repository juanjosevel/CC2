void tres(){
int suma;
int matriz[5][3];
for(int i=0;i<5;i++){
    for(int j=0;j<3;j++){
        cout<<"Ingrese el elemento "<<i<<" "<<j<<" de la matriz: ",
        cin>>matriz[i][j];
    }
}

for(int i=0;i<5;i++){
        suma=0;
    for(int j=0;j<3;j++){
        if(i%2==0){
            suma=suma+matriz[i][j];
        }
    }
    if(i%2==0){
cout<<"la suma de la fila par "<<i<<" es: "<<suma<<endl;
}
}
}



/////////////////////////
//EJERCICIO 4
/////////////////////////

void cuatro(){
  int k=0;
  bool primo=true;
  int n=2;
  int arr[25];

while(k<25){
        primo=true;
      for (int i=2;i<=n/2;i++){
      if (n%i==0){
        primo=false;
        break;
      }
    }
    if(primo){
     k++;
      //cout<<n<<", ";
      arr[k]=n;
    }
    n=n+1;
}

for(int i=1;i<25;i++){
    cout<<arr[i]<<endl;
}
}



