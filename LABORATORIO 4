void seis(){

int matriz[3][3];
int suma;
int v[3];

for(int i=0;i<3;i++){
    for(int j=0;j<3;j++){
        cout<<"ingrese los numeros a almacenar: ";
        cin>>matriz[i][j];
    }
}

for(int i=0;i<3;i++){
        suma=0;
    for(int j=0;j<3;j++){
        suma=matriz[i][j]+suma;
    }
    v[i]=suma;
}


if(v[0]>v[1] && v[0]>v[2])
    cout<<v[0]<<"es el mayor valor de suma";
if(v[1]>v[0] && v[1]>v[2])
    cout<<v[1]<<"es el mayor valor de suma";
if(v[2]>v[1] && v[2]>v[0])
    cout<<v[2]<<"es el mayor valor de suma";
}


/////////////////////////
//EJERCICIO 7
/////////////////////////


void mostrar(int M[3][3],int f,int c)
{
    for(int i=0;i<f;i++)
    {
        for(int j=0;j<c;j++)
            cout<<M[i][j]<<"\t";
        cout<<endl;
    }
}

intercambiarfila(int M[3][3],int a,int b){
    int aux[3];

    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++){
            aux[j]=M[a][j];
            M[a][j]=M[b][j];
            M[b][j]=aux[j];

        }
    }

}

intercambiarcolumna(int M[3][3],int a,int b){
    int aux[3];

    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++){
            aux[j]=M[j][a];
            M[j][a]=M[j][b];
            M[j][b]=aux[j];

        }
    }

}

void siete(){

int matriz[3][3];
int f1,f2;
int c1,c2;

for(int i=0;i<3;i++){
    for(int j=0;j<3;j++){
        cout<<"ingrese los valores de la matriz: ";
        cin>>matriz[i][j];
    }
}
cout<<"La matriz original es: "<<endl;
mostrar(matriz,3,3);
cout<<"ingrese las filas que quiere intercambiar: ";
cin>>f1;
cin>>f2;
intercambiarfila(matriz,f1,f2);
cout<<"la nueva matriz es: "<<endl;
mostrar(matriz,3,3);
cout<<"ingrese las columnas que quiere intercambiar: ";
cin>>c1;
cin>>c2;
intercambiarcolumna(matriz,c1,c2);
cout<<"la nueva matriz es: "<<endl;
mostrar(matriz,3,3);
}









