int buscar(int a,int arr[]){
for(int i=0;i<8;i++){
    if(a==arr[i]){
        cout<<"Verdadero";
        break;
    }
    else{
        cout<<"Falso";
        break;
            }
}
}

void dos(){
int arr[]={2,5,8,12,15,19,54,87};
int a;
cout<<"ingrese el numero a buscar: ";
cin>>a;
cout<<"elementos del arreglo: "<<endl;
for(int i=0;i<8;i++)
    cout<<arr[i]<<endl;
buscar(a,arr);
}


