4. Escribe una clase de nombre ClaseDisco, que herede de la clase ClaseMultimedia los atributos y métodos definidos por usted. La clase ClaseDisco tiene, aparte de los elementos heredados, un atributo más también definido por usted. Al momento de imprimir la información debe mostrase por pantalla toda la información.

SOLUCIÓN:

Archivos cabecera:
ClaseMultimedia.h:
#ifndef CLASEMULTIMEDIA_H
#define CLASEMULTIMEDIA_H

#include<iostream>
using namespace std;

class ClaseMultimedia {

protected:
	string Nombre;
	string Productora;
	string PublicoDirigido;
	int AnioLanzamiento;
	int Duracion;
public:
	ClaseMultimedia(string,string,string,int,int);
	~ClaseMultimedia();
private:
};

#endif

ClaseDisco.h:
#ifndef CLASEDISCO_H
#define CLASEDISCO_H
#include "ClaseMultimedia.h"
#include<iostream>
using namespace std;

class ClaseDisco : public ClaseMultimedia {
public:
	ClaseDisco(string,string,string,int,int,string);

	string Artista;
	void mostrar();
private:
};

#endif

Archivos fuente:
Main.cpp:
#include<iostream>
using namespace std;
#include "ClaseDisco.h"

int main (int argc, char *argv[]) {
	ClaseDisco obj1=ClaseDisco("Exitos del verano 2022","RCA victor","adulto",2022,3,"nirvana");
	obj1.mostrar();
	
	return 0;
}

ClaseMultimedia.cpp:
#include "ClaseMultimedia.h"

ClaseMultimedia::ClaseMultimedia(string _nombre, string _productora, string _publicodirigido, int _aniolanzamiento, int _duracion) {
	Nombre = _nombre;
	Productora = _productora;
	PublicoDirigido = _publicodirigido;
	AnioLanzamiento = _aniolanzamiento;
	Duracion = _duracion;	
}

ClaseMultimedia::~ClaseMultimedia() {
	
}

ClaseDisco.cpp:
#include "ClaseDisco.h"

ClaseDisco::ClaseDisco(string _nombre, string _productora, string _publicodirigido, int _aniolanzamiento, int _duracion, string _artista):ClaseMultimedia(_nombre,_productora,_publicodirigido,_aniolanzamiento,_duracion) {
	Artista = _artista;

}

void ClaseDisco::mostrar(){
	cout<<"la informacion total es la siguiente: "<<endl;
	cout<<"nombre: "<<Nombre<<", "<<"productora: "<<Productora<<", "<<"publico al que esta dirigido: "<<PublicoDirigido<<", ";
	cout<<"anio de lanzamiento: "<<AnioLanzamiento<<", "<<"duracion: "<<Duracion<<", "<<"artista: "<<Artista;
}


5. Escribe un programa que implemente la siguiente jerarquía de clases


SOLUCIÓN:

Archivos fuente:
Main.cpp:
#include<iostream>
using namespace std;
#include "operacionFactorial.h"

int main (int argc, char *argv[]) {
	operacionFactorial obj1;
	obj1.setOperador(1);
	obj1.getOperador(5);
	
	return 0;
}

operacionBase.cpp:
#include "operacionBase.h"

#include "operacionFactorial.h"
operacionBase::operacionBase() {
	
}

operacionBase::~operacionBase() {
	
}

void operacionBase::setOperador(int o){
	
}

int operacionBase::getOperador(int o){
	
		operacionFactorial obj2=operacionFactorial();
		obj2.devolverFactorial(o);
	
	return o;
}

operacionFactorial.cpp:

#include "operacionFactorial.h"
#include<iostream>
using namespace std;

operacionFactorial::operacionFactorial() {
	
}

operacionFactorial::~operacionFactorial() {
	
}

int operacionFactorial::devolverFactorial(int n){
	for(int i=1;i<n;i++){
		n=n*i;
		}
		cout<<"el factorial es"<<n;
	return n;
}

Archivos cabecera:
operacionBase.h:
#ifndef OPERACIONBASE_H
#define OPERACIONBASE_H

class operacionBase {	
	public:
	operacionBase();
	~operacionBase();
	int operador;
	void setOperador(int o);
	int getOperador(int);
private:
};

#endif

operacionFactorial.h:
#ifndef OPERACIONFACTORIAL_H
#define OPERACIONFACTORIAL_H
#include "operacionBase.h"

class operacionFactorial : public operacionBase {
public:
	operacionFactorial();
	~operacionFactorial();
	int devolverFactorial(int);
private:
};

#endif

