////////////////// UNO /////////////////77

#include<iostream>
using namespace std;

class Nodo
{
public:
	int dato;
	Nodo *siguiente;
};

class Lista
{
private:
	Nodo* Primero;
public:
	Lista();
	void insertar(int dato);
	void mostrar();
};

Lista::Lista() { 
	Primero = NULL;
}

void Lista::insertar(int dato){ 
	
	Nodo* nuevo = new Nodo(); 
	nuevo->dato = dato;
	nuevo->siguiente = NULL;

	if(Primero==NULL){
		 Primero = nuevo;
		return; 
	} 
	
	Nodo* temporal = Primero; 

	while(temporal->siguiente!=NULL)
		 temporal = temporal->siguiente;
	temporal->siguiente = nuevo;
} 

void Lista::mostrar(){ 

	Nodo* nodo = Primero; 
	while(nodo!=NULL){ 
		cout << nodo->dato << "->";
		nodo = nodo->siguiente; 
	}
	cout<<endl;
}

int main()
{	int k;
	Lista* obj1 = new Lista();
	
	for(int i=0; i<10; i++){
		cout<<"Ingrese los datos de los nodos: ";
		cin>>k;
		obj1->insertar(k);
		obj1->mostrar(); 
	}
	return 0;
}




